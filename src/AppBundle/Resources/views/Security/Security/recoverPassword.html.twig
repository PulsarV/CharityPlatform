{% extends ':Base:base_wo_sidebar_centered.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% set title = 'Відновлення паролю' %}

{% block content %}
    {{ form_start(form) }}
    {% embed '::Panel/save_panel.html.twig'%}
        {% block panel_title %}Відновлення паролю{% endblock %}
        {% block panel_body %}
            Введіть Email:
            {{ form_widget(form) }}
            {% if error is not null %}
                {{ error }}
            {% endif %}
        {% endblock %}
        {% block submit_button %}Відновити{% endblock %}
    {% endembed %}
    {{ form_end(form) }}
{% endblock %}

