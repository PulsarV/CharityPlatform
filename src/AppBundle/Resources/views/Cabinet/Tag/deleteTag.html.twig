{% extends ':Base:base_with_left_sidebar.html.twig' %}

{% set title = 'Підтвердження видалення тегу' %}

{% block content %}
    <div class="col-sm-push-2 col-sm-8">
    <div class="panel panel-primary submit-form">
        <div class="panel-heading"><h4>Підтвердження видалення тегу</h4></div>
        <div class="panel-body">
            <h4>Ви дійсно бажаєте видалити тег</h4>
            <h3>{{ tag.tagName }}?</h3>
        </div>
        <div class="panel-footer">
            {{ form_start(delete_form) }}
                {{ form_widget(delete_form) }}
                <a href="{{ path('tag_manager_index') }}" class=" btn btn-info btn-form">Назад</a>
                <input type="submit" value="Видалити" class="btn btn-danger btn-form pull-right" />
            {{ form_end(delete_form) }}
        </div>
    </div>
    </div>
{% endblock %}