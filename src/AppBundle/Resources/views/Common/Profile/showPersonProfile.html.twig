{% extends ':Base:base_with_right_sidebar.html.twig' %}

{% block content %}
    <h1>Користувач {{ profile.username}}</h1>
    <p>
        Назва: {{ profile.firstname}} {{ profile.lastname }} <br>
        Адреса: {{ profile.address }}<br>
        e-mail: {{ profile.email }}<br>
        Дата створення: {{ profile.createdAt|date("m-d-Y H:i:s a") }}<br>
    </p>
    Запити:
    {% for charity in profile.charities %}
         <a href="{{ path('charity_show', {'slug': charity.slug }) }}"> <li>{{ charity.title }}</li></a>
    {% endfor %}
{% endblock %}


