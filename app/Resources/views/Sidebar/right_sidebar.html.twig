<!-- Search -->

<div class="widget search">
    {% block find_charity %}
        <div class="sidebar">
            {{ render(controller(
            'AppBundle:Common/Charity:findCharitiesForm'
            )) }}
        </div>
    {% endblock find_charity %}
</div><!-- /Search -->

<div class="widget top-requests">
    <h3>Найважливіші на думку спільноти запити</h3>
    {% for important_charity in important_charities() %}
        <div class="media">
            <div class="pull-left">
                <img src="{{ asset('uploads/charities/' ~ important_charity.banner)|imagine_filter('charity_image_small') }}"/>
            </div>
            <div class="media-body">
                <span class="media-heading"><a href="{{ path('charity_show', {'slug': important_charity.slug}) }}">{{ important_charity.title }}</a></span>
                <br>
                <small class="muted">Розміщено {{ important_charity.createdAt|date("d M, Y") }}</small>
            </div>
        </div>
    {% endfor %}
</div>

<div class="widget active-requests">
    <h3>Вони потребують Вашої допомоги</h3>
    {% for active_charity in active_charities() %}
        <div class="media">
            <div class="pull-left">
                <img src="{{ asset('uploads/charities/' ~ active_charity.banner)|imagine_filter('charity_image_small') }}"/>
            </div>
            <div class="media-body">
                <span class="media-heading"><a href="{{ path('charity_show', {'slug': active_charity.slug}) }}">{{ active_charity.title }}</a></span>
                <br>
                <small class="muted">Розміщено {{ active_charity.createdAt|date("d M, Y") }}</small>
            </div>
        </div>
    {% endfor %}
</div>

<div class="widget completed-requests">
    <h3>Збір коштів завершено</h3>
    {% for completed_charity in completed_charities() %}
        <div class="media">
            <div class="pull-left">
                <img src="{{ asset('uploads/charities/' ~ completed_charity.banner)|imagine_filter('charity_image_small') }}"/>
            </div>
            <div class="media-body">
                <span class="media-heading"><a href="{{ path('charity_show', {'slug': completed_charity.slug}) }}">{{ completed_charity.title }}</a></span>
                <br>
                <small class="muted">Розміщено {{ completed_charity.createdAt|date("d M, Y") }}</small>
            </div>
        </div>
    {% endfor %}
</div>

<div class="widget tags">
    <h3>Хмарина тегів</h3>
    <ul class="tag-cloud">
    {% for tag_cloud_element in tag_cloud_elements() %}
        <li><a class="btn btn-xs btn-primary" href="{{ path('charity_index_filtered', {'page': 1, 'filter': 'tag', 'slug': tag_cloud_element.slug, 'sortmode': 'd'}) }}">{{ tag_cloud_element.tagName }}</a></li>
    {% endfor %}
    </ul>
</div><!--/.tags-->