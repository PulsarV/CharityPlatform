<div class="widget tags">
    <h3>Хмарина тегів</h3>
    <ul class="tag-cloud">
    {% for tag_cloud_element in tag_cloud_elements() %}
        <li><a class="btn btn-xs btn-primary" href="{{ path('charity_index_filtered', {'page': 1, 'filter': 'tag', 'slug': tag_cloud_element.slug, 'sortmode': 'd'}) }}">{{ tag_cloud_element.tagName }}</a></li>
    {% endfor %}
    </ul>
</div><!--/.tags-->