<!-- Search -->
<div class="widget search">
    <form role="form">
        <div class="input-group">
            <input type="text" class="form-control" autocomplete="off" placeholder="Пошук">
                        <span class="input-group-btn">
                            <button class="btn btn-info" type="button" data-toggle="tooltip" data-placement="right" title="Розширений пошук"><i class="fa fa-search-plus"></i></button>
                            <button class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="right" title="Пошук"><i class="fa fa-search"></i></button>
                        </span>
        </div>
    </form>
</div><!-- /Search -->

<div class="widget top-requests">
    <h3>Найважливіші на думку спільноти запити</h3>
    {% for important_charity in important_charities() %}
        <div class="media">
            <div class="pull-left">
                <img src="{{ asset('uploads/charities/' ~ important_charity.banner)|imagine_filter('charity_image_small') }}"/>
            </div>
            <div class="media-body">
                <span class="media-heading"><a href="{{ path('charity_show', {'slug': important_charity.slug}) }}">{{ important_charity.title }}</a></span>
                <br>
                <small class="muted">Розміщено {{ important_charity.createdAt|date("d M, Y") }}</small>
            </div>
        </div>
    {% endfor %}
</div>

