{% if page is defined and pages_count is defined and pages_count > 0 %}
    <ul class="pagination pagination-lg">
        {% if page > 1 %}
            {% if slug is defined %}
                <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': page - 1 }) }}"><i class="fa fa-angle-left"></i></a></li>
            {% else %}
                <li><a href="{{ path(app.request.attributes.get('_route'), {'page': page - 1 }) }}"><i class="fa fa-angle-left"></i></a></li>
            {% endif %}
        {% else %}
            <li class="disabled"><a href="#"><i class="fa fa-angle-left"></i></a></li>
        {% endif %}

        {% for i in 1..pages_count %}
            {% if i == page %}
                <li class="active"><a href="">{{ i }}</a></li>
            {% else %}
                {% if slug is defined %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': i }) }}">{{ i }}</a></li>
                {% else %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'page': i }) }}">{{ i }}</a></li>
                {% endif %}
            {% endif %}
        {% endfor %}

        {% if page < pages_count %}
            {% if slug is defined %}
                <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': page + 1 }) }}"><i class="fa fa-angle-right"></i></a></li>
            {% else %}
                <li><a href="{{ path(app.request.attributes.get('_route'), {'page': page + 1 }) }}"><i class="fa fa-angle-right"></i></a></li>
            {% endif %}
        {% else %}
            <li class="disabled"><a href=""><i class="fa fa-angle-right"></i></a></li>
        {% endif %}
    </ul>
{% endif %}