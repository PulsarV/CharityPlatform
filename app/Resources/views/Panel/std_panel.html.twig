<div class="panel panel-primary std-panel">
    <div class="panel-heading">
        <h4>
            {% block panel_title %}
            {% endblock %}
        </h4>
    </div>
    <div class="panel-body">
        {% block panel_body %}
        {% endblock %}
    </div>
    <div class="panel-footer">
        <a href="{% block back_button_url %}{% endblock %}" class=" btn btn-info btn-form">{% block back_button %}{% endblock %}</a>
        <input type="submit" value="{% block submit_button %}{% endblock %}" class="btn btn-success btn-form pull-right" />
    </div>
</div>